<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_ts"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_ys"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ys"
        app:layout_constraintEnd_toStartOf="@id/img_ts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_zs"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/zs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_ts" />
</androidx.constraintlayout.widget.ConstraintLayout>